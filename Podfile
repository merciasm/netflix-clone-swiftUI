# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

# ignore all warnings from all pods
inhibit_all_warnings!

# Shared pods
def shared_pods

    # Network
    pod 'Alamofire', '~> 5.4.3'
    pod 'OHHTTPStubs/Swift'

    # Linting
    pod 'SwiftLint', '~> 0.43.1'

    # Tooling
    pod 'RxCocoa', '~> 6.2.0'
    pod 'RxSwift', '~> 6.2.0'

    pod 'Kingfisher'
end

target 'netflix-clone' do
  shared_pods
end

